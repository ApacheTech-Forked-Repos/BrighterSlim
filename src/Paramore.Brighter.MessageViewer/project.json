{
  "version": "1.0.0-*",
  "dependencies": {
    "Newtonsoft.Json": "9.0.1",
    "Paramore.Brighter": { "target": "project" },
    "Paramore.Brighter.MessageStore.MsSql": { "target": "project" },
    "Paramore.Brighter.MessagingGateway.RMQ": { "target": "project" },
    "Nancy": "2.0.0-barneyrubble",
    "Nancy.Embedded": "2.0.0-barneyrubble",
    "Polly": "4.3.0"
  },
  "frameworks": {
    "netstandard1.6": {
      "imports": "dnxcore50"
    },
    "net452": {}
  },
  "buildOptions": {
    "debugType": "portable",
    "embed": [
      "assets/**",
      "Content/**",
      "fonts/**",
      "Scripts/bootstrap.js",
      "Scripts/jquery-2.1.3.min.js",
      "Scripts/mustache.js",
      "favicon.ico"

      //, "Scripts/**" - include this and build fiels with errors in *.targets (!)
    ]
  },
  "configurations": {
    "Debug": {
      "buildOptions": {
        "define": [ "DEBUG", "TRACE" ]
      }
    },
    "Release": {
      "buildOptions": {
        "define": [ "RELEASE", "TRACE" ],
        "optimize": true
      }
    }
  }
}
