<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard1.5;netstandard2.0</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Daniel Stockhammer, Toby Henderson</Authors>
    <Description>Brighter Microsoft.Extensions.DependencyInjection support</Description>
    <PackageProjectUrl>https://github.com/BrighterCommand/Paramore.Brighter.Extensions</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/BrighterCommand/Paramore.Brighter.Extensions/blob/master/LICENSE.md</PackageLicenseUrl>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Paramore.Brighter" Version="7.4.2" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.5' ">
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="1.1.1" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.1.1" />
  </ItemGroup>
</Project>
